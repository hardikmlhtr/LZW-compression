def main():
    reqd = 1
    i = 1
    len = 0
    while i < 1000000:
        s = steps(i)
        if s > len:
            len = s
            reqd = i
        i+=1
    print reqd
    
def steps(n):
    num = 1
    while n != 1:
        if n % 2 == 0:
            n = n /2
            num += 1
        else:
            n = 3*n +1
            num +=1
    return num
        
